<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right|center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_weight="21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_hora"
                    android:gravity="left"
                    android:text="10.00"
                    android:textColor="#F0002F"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:gravity="left"
                    android:textSize="22dp"
                    android:textColor="#919191"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_weight="40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_aula"
                    android:textSize="22dp"
                    android:textColor="#161616"
                    android:text="AUDITORIO"
                    android:textAllCaps="true"/>

                <Button
                    android:layout_weight="30"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_add"
                    android:padding="6dp"
                    android:background="#F0002F"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:text="AGENDAR"
                    />
            </LinearLayout>
            <View
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#919191"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#161616"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:id="@+id/item_tema"
                android:text="Blockchain + IoT: Haciendo transportes inteligentes"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:id="@+id/item_speaker"
                android:background="#161616"
                android:padding="10dp"
                android:text="Maria Munaro. IBM"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>